# Environment variables for DevDocSync
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32

# Database Configuration
DATABASE_URL=postgresql://devdoc:password@localhost:5432/devdocsync
DEV_DATABASE_URL=sqlite:///./sql_app.db

# Authentication Settings
JWT_LIFETIME_SECONDS=604800  # 7 days
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# App Settings
APP_NAME=DevDocSync
APP_VERSION=1.0.0
DEBUG=true
